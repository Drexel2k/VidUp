<UserControl x:Class="Drexel.VidUp.UI.Controls.TemplateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drexel.VidUp.UI.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="UCTemplate"
             xmlns:converters="clr-namespace:Drexel.VidUp.UI.Converters" Cursor="Hand">
    <Grid Height="Auto" Width="Auto" Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Padding="0">
            <GroupBox.Header>
                <TextBlock Text="FOR VIDUP DISPLAY / Settings" Margin="2" />
            </GroupBox.Header>

            <Grid Height="Auto" Width="620" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="310"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Canvas Grid.Row="0" Grid.ColumnSpan="2" Margin="1,0,1,0">
                    <Canvas.Background>
                        <ImageBrush ImageSource="{Binding PictureFilePathForRendering, Mode=OneWay}" Stretch="Fill" />
                    </Canvas.Background>
                </Canvas>

                <!--<CheckBox Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Style="{StaticResource MaterialDesignLightCheckBox}">
                Check
            </CheckBox>-->

                <Button Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Margin="3"  Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
                    <materialDesign:PopupBox  StaysOpen="False" >
                        <StackPanel>
                            <Button Content="Delete" Command="{Binding DataContext.DeleteTemplateCommand, ElementName=CMainWindow}" CommandParameter="{Binding Guid}" />
                        </StackPanel>
                    </materialDesign:PopupBox>
                </Button>

                <StackPanel  Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="2">
                    <Label Content="Name: " Width="115" />
                    <TextBox Text="{Binding Name}"  Width="400" />
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="2">
                    <Label Content="Project Root Folder:" Width="115" />
                    <Label Content="{Binding RootFolderPath, Mode=OneWay}" Width="380" Margin="0 0 10 0"  />
                    <materialDesign:PackIcon Kind="HelpOutline" Grid.Column="1" VerticalAlignment="Bottom" Margin="0 0 10 5" ToolTip="To every file added from this folder or any subfolder this template is assigne automatically." Background="Transparent" />
                    <Button Command="{Binding OpenFileDialogCommand }" CommandParameter="root" Style="{StaticResource MaterialDesignRaisedLightButton}"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0" Width="80" Height="20" Grid.Column="1" Padding="0" Content="Browse" VerticalContentAlignment="Top" Cursor="Hand" />
                </StackPanel>

                <StackPanel  Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="2">
                    <Label Content="Picture: " Width="115" />
                    <Label Content="{Binding PictureFilePathForEditing, Mode=OneWay}" Width="380" Margin="0 0 10 0" />
                    <materialDesign:PackIcon Kind="HelpOutline" Grid.Column="1" VerticalAlignment="Bottom" Margin="0 0 10 5" ToolTip="For visualization of uploads in upload view. Recommended size: 620x50px." Background="Transparent" />
                    <Button Command="{Binding OpenFileDialogCommand }" CommandParameter="pic" Style="{StaticResource MaterialDesignRaisedLightButton}"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0" Width="80" Height="20" Grid.Column="1" Padding="0" Content="Browse" VerticalContentAlignment="Top" Cursor="Hand" />
                </StackPanel>
                <StackPanel  Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="2">
                    <Label Content="Thumbnail Folder: " Width="115" />
                    <Label Content="{Binding ThumbnailFolderPath, Mode=OneWay}" Width="380" Margin="0 0 10 0" />
                    <materialDesign:PackIcon Kind="HelpOutline" Grid.Column="1" VerticalAlignment="Bottom" Margin="0 0 10 5" ToolTip="VidUp will assign thumbnails automatically if the file names without extension are equal. Lookup location this folder, then in folder of video." Background="Transparent" />
                    <Button Command="{Binding OpenFileDialogCommand }" CommandParameter="thumb" Style="{StaticResource MaterialDesignRaisedLightButton}"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0" Width="80" Height="20" Grid.Column="1" Padding="0" Content="Browse" VerticalContentAlignment="Top" Cursor="Hand" />
                </StackPanel>

            </Grid>

        </GroupBox>

        <GroupBox Grid.Row="1" Padding="0" Margin="0,10,0,0">
            <GroupBox.Header>
                <TextBlock Text="YOUTUBE STANDARD" Margin="2" />
            </GroupBox.Header>

            <Grid Height="Auto" Width="620" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="310"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="2">
                    <Label Content="Title: " Width="115" />
                    <TextBox Text="{Binding YtTitle}"  Width="480" />
                    <materialDesign:PackIcon Kind="HelpOutline" Grid.Column="1" VerticalAlignment="Bottom" Margin="0 0 10 5" ToolTip="You can use placeholers #0#, #1#, ... in title. #0# will be replace with 1st occurence of #some text# in file name, #1# with 2nd occurence and so on." Background="Transparent" />
                </StackPanel>
                <StackPanel  Grid.Row="1" Grid.ColumnSpan="2" Orientation="Vertical">
                    <Label Content="Description: " Width="110" HorizontalAlignment="Left" />
                    <TextBox Text="{Binding YtDescription, Mode=TwoWay}" TextWrapping="Wrap" AcceptsReturn="True" Width="615" MinHeight="200" MaxHeight ="200" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" />
                </StackPanel>
                <StackPanel  Grid.Row="2" Grid.ColumnSpan="2" Orientation="Vertical">
                    <StackPanel  Orientation="Horizontal" HorizontalAlignment="Left">
                        <Label Content="Tags: " Width="40" />
                        <materialDesign:PackIcon Kind="HelpOutline" VerticalAlignment="Bottom" Margin="0 5 10 5" ToolTip="Enter tags comma separated, e.g. 'tag 1,tag 2,tag 3'." Background="Transparent" />
                    </StackPanel>
                    <TextBox Text="{Binding TagsAsString}" TextWrapping="Wrap" Width="615" MinHeight="100" MaxHeight ="100" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" />
                </StackPanel>
                <StackPanel  Grid.Row="3" Grid.Column="0" Orientation="Horizontal">
                    <Label Content="Visbility: " Width="110" />
                </StackPanel>
                <StackPanel  Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                    <ComboBox  ItemsSource="{Binding YtVisibilities}" SelectedItem="{Binding YtVisibility}" Width="100">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={converters:EnumConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <Label Grid.Row="4" Grid.Column="0" Content="Default Publish At Time: " Width="250" HorizontalAlignment="Left" />
                <!--Binding OneWay because setting is handled by event. -->
                <ComboBox Grid.Row="4" Grid.Column="1" SelectedItem="{Binding DefaultPublishAtTime, Mode=OneWay}" ItemsSource="{Binding QuarterHourViewModels}" DisplayMemberPath="QuarterHourAs24hString" Width="60" DropDownClosed="ComboBoxQuarterHourSelect_DropDownClosed" HorizontalAlignment="Left" />

            </Grid>
        </GroupBox>

        <!--<GroupBox Grid.Row="2" Padding="0" Margin="0,10,0,0">
            <GroupBox.Header>
                <TextBlock Text="YOUTUBE FURTHER OPTIONS" Margin="2" />
            </GroupBox.Header>

            <Grid Height="Auto" Width="620" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel  Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="2">
                    <Label Content="Game: " Width="110" />
                    <TextBox Text="{Binding GameTitle}" MinWidth="500" />
                </StackPanel>
            </Grid>

        </GroupBox>-->
    </Grid>
</UserControl>
